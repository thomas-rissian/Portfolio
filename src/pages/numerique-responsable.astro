---
import Layout from '../layouts/Layout.astro';

const projets = await Astro.glob('../content/numerique-responsable/*.md');
---

<Layout pageTitle="Numérique Responsable">
  <div class="nr-container">
    <div class="nr-intro">
      <p class="nr-intro-text">
        Découvrez comment nos projets intègrent les bonnes pratiques du numérique responsable pour un impact environnemental et social positif.
      </p>
    </div>
    
    <div class="nr-list">
      {projets.map(projet => (
        <a href={`/numerique-responsable/${projet.frontmatter.slug}/`} class="nr-card" data-projet={JSON.stringify(projet.frontmatter)}>
          <div class="nr-card-content">
            <h2 class="nr-card-title">{projet.frontmatter.titre}</h2>
            <div class="nr-card-sections">
              <div class="nr-section">
                <h3 class="nr-section-title">
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M12 3v18M3 12h18M12 8a4 4 0 0 1 4 4M12 16a4 4 0 0 0 4-4"/>
                  </svg>
                  Écoconception
                </h3>
                <p>{projet.frontmatter.ecoconception}</p>
              </div>
              
              <div class="nr-section">
                <h3 class="nr-section-title">
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M12 15a3 3 0 1 0 0-6 3 3 0 0 0 0 6z"/>
                    <path d="M18.7 14.3l-1.4-1.4a5 5 0 0 0 0-7l1.4-1.4a7 7 0 0 1 0 9.8z"/>
                    <path d="M5.3 14.3a7 7 0 0 1 0-9.8l1.4 1.4a5 5 0 0 0 0 7l-1.4 1.4z"/>
                  </svg>
                  Accessibilité
                </h3>
                <p>{projet.frontmatter.accessibilite}</p>
              </div>
            </div>
            <div class="nr-link">
              <a href="#" class="nr-external-link">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/>
                  <path d="M15 3h6v6"/>
                  <path d="M10 14L21 3"/>
                </svg>
                Voir le projet
              </a>
            </div>
          </div>
        </a>
      ))}
    </div>
  </div>

  <!-- Popup Modal -->
  <div class="nr-modal">
    <div class="nr-modal-content">
      <button class="nr-modal-close">×</button>
      
      <div class="nr-modal-header">
        <h2 class="nr-modal-title"></h2>
      </div>

      <div class="nr-modal-body">
        <div class="nr-modal-sections">
          <section class="nr-modal-section">
            <h3 class="section-title">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M12 3v18M3 12h18M12 8a4 4 0 0 1 4 4M12 16a4 4 0 0 0 4-4"/>
              </svg>
              Écoconception
            </h3>
            <div class="section-content eco-content"></div>
          </section>

          <section class="nr-modal-section">
            <h3 class="section-title">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M12 15a3 3 0 1 0 0-6 3 3 0 0 0 0 6z"/>
                <path d="M18.7 14.3l-1.4-1.4a5 5 0 0 0 0-7l1.4-1.4a7 7 0 0 1 0 9.8z"/>
                <path d="M5.3 14.3a7 7 0 0 1 0-9.8l1.4 1.4a5 5 0 0 0 0 7l-1.4 1.4z"/>
              </svg>
              Accessibilité
            </h3>
            <div class="section-content access-content"></div>
          </section>
        </div>

        <div class="nr-modal-carousel">
          <h3 class="carousel-title">Galerie du projet</h3>
          <div class="carousel-container">
            <div class="carousel-track">
              <!-- Les images seront insérées ici par JavaScript -->
            </div>
            <button class="carousel-nav prev" aria-label="Image précédente">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M15 18l-6-6 6-6"/>
              </svg>
            </button>
            <button class="carousel-nav next" aria-label="Image suivante">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M9 18l6-6-6-6"/>
              </svg>
            </button>
          </div>
        </div>

        <div class="nr-modal-footer">
          <a href="#" class="nr-modal-link" target="_blank" rel="noopener">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/>
              <path d="M15 3h6v6"/>
              <path d="M10 14L21 3"/>
            </svg>
            Voir le projet complet
          </a>
        </div>
      </div>
    </div>
  </div>

  <style>
    .nr-container {
      max-width: 1600px;
      margin: 0 auto;
      padding: 3rem 5vw 2rem 5vw;
      background: transparent;
      box-shadow: none;
    }

    .nr-intro {
      text-align: center;
      margin-bottom: 4rem;
      padding: 2.5rem;
      background: linear-gradient(120deg, #101624 0%, #18223a 100%);
      border-radius: 0.7em;
      border: 1.5px solid #22304a;
      box-shadow: 0 8px 36px 0 #0a0e1a, 0 2px 12px 0 #22304a33;
      max-width: 900px;
      margin-left: auto;
      margin-right: auto;
      animation: fadeInVoletModern 0.7s cubic-bezier(.22,1,.36,1);
    }

    .nr-intro:hover {
      background: linear-gradient(120deg, #18223a 0%, #101624 100%);
      border-color: #5A82B2;
      transform: translateY(-5px) scale(1.02);
      box-shadow: 0 24px 64px 0 #22304a99, 0 6px 32px 0 #0a0e1a;
    }

    .nr-intro-text {
      color: #e3f2fd;
      font-size: 1.25rem;
      line-height: 1.7;
      margin: 0 auto;
      font-weight: 500;
      letter-spacing: 0.2px;
    }

    .nr-list {
      display: flex;
      flex-wrap: wrap;
      gap: 2.5rem;
      justify-content: center;
    }

    .nr-card {
      width: 420px;
      min-height: 236px;
      text-decoration: none;
      color: inherit;
      display: flex;
      flex-direction: column;
      border-radius: 0.7em;
      background: linear-gradient(120deg, #101624 0%, #18223a 100%);
      box-shadow: 0 8px 36px 0 #0a0e1a, 0 2px 12px 0 #22304a33;
      border: 1.5px solid #22304a;
      transition: 
        box-shadow 0.32s cubic-bezier(.22,1,.36,1), 
        background 0.22s, 
        transform 0.22s, 
        border 0.22s;
      will-change: transform, box-shadow;
      overflow: hidden;
    }

    .nr-card-content {
      height: 100%;
      padding: 2.5rem 1.8rem;
      transition: all 0.3s ease;
    }

    .nr-card:hover {
      box-shadow: 0 24px 64px 0 #22304a99, 0 6px 32px 0 #0a0e1a;
      background: linear-gradient(120deg, #18223a 0%, #101624 100%);
      border-color: #5A82B2;
      transform: translateY(-10px) scale(1.035) rotate(-0.5deg);
      z-index: 2;
    }

    .nr-card-title {
      font-size: 1.25rem;
      font-weight: 700;
      color: #5A82B2;
      margin-bottom: 1.8rem;
      letter-spacing: 1.5px;
      text-transform: uppercase;
      text-align: center;
      position: relative;
      line-height: 1.3;
    }

    .nr-card:hover .nr-card-title {
      color: #dbeafe;
    }

    .nr-card-sections {
      display: flex;
      flex-direction: column;
      gap: 2rem;
    }

    .nr-section {
      color: #e3f2fd;
      background: rgba(24, 34, 58, 0.5);
      padding: 1.2rem;
      border-radius: 0.8rem;
      border: 1px solid #22304a;
      transition: all 0.3s ease;
    }

    .nr-card:hover .nr-section {
      background: rgba(24, 34, 58, 0.7);
      border-color: rgba(90, 130, 178, 0.4);
      transform: translateY(-3px);
    }

    .nr-section-title {
      display: flex;
      align-items: center;
      gap: 0.7rem;
      font-size: 1.1rem;
      color: #5A82B2;
      margin: 0 0 1rem 0;
      font-weight: 600;
      letter-spacing: 0.5px;
    }

    .nr-section-title svg {
      width: 22px;
      height: 22px;
      transition: all 0.3s ease;
    }

    .nr-card:hover .nr-section-title svg {
      transform: scale(1.1);
      color: #dbeafe;
    }

    .nr-section p {
      margin: 0;
      font-size: 0.98rem;
      line-height: 1.6;
      color: #b3c6e0;
      transition: color 0.3s ease;
    }

    .nr-card:hover .nr-section p {
      color: #e3f2fd;
    }

    .nr-link {
      margin-top: 2rem;
      padding-top: 1.5rem;
      border-top: 1px solid #22304a;
      text-align: center;
    }

    .nr-external-link {
      display: inline-flex;
      align-items: center;
      gap: 0.7rem;
      color: #5A82B2;
      text-decoration: none;
      font-weight: 600;
      padding: 0.7em 1.4em;
      border-radius: 2em;
      font-size: 0.95rem;
      letter-spacing: 0.3px;
      background: rgba(35, 41, 58, 0.9);
      border: 1.5px solid rgba(90, 130, 178, 0.3);
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .nr-external-link:hover {
      background: linear-gradient(135deg, #4A72A2 0%, #5A82B2 100%);
      color: #ffffff;
      border-color: #6992c2;
      transform: translateY(-2px);
      box-shadow: 0 4px 15px rgba(90, 130, 178, 0.4);
    }

    /* Modal Styles */
    .nr-modal {
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: rgba(16, 22, 36, 0.95);
      display: none;
      justify-content: center;
      align-items: center;
      z-index: 1000;
      backdrop-filter: blur(8px);
      -webkit-backdrop-filter: blur(8px);
    }

    .nr-modal.active {
      display: flex;
      animation: modalFadeIn 0.3s cubic-bezier(.22,1,.36,1);
    }

    .nr-modal-content {
      background: linear-gradient(120deg, #101624 0%, #18223a 100%);
      border-radius: 1rem;
      border: 2px solid #22304a;
      width: 90%;
      max-width: 1000px;
      max-height: 90vh;
      overflow-y: auto;
      position: relative;
      box-shadow: 0 24px 64px 0 #0a0e1a, 0 6px 32px 0 #22304a33;
    }

    .nr-modal-close {
      position: absolute;
      top: 1rem;
      right: 1rem;
      background: rgba(90, 130, 178, 0.2);
      border: none;
      color: #fff;
      width: 2.5rem;
      height: 2.5rem;
      border-radius: 50%;
      font-size: 1.5rem;
      cursor: pointer;
      display: flex;
      align-items: center;
      justify-content: center;
      transition: all 0.3s ease;
    }

    .nr-modal-close:hover {
      background: #5A82B2;
      transform: rotate(90deg);
    }

    .nr-modal-header {
      padding: 2rem 2rem 0.5rem 2rem;
      text-align: center;
    }

    .nr-modal-title {
      color: #dbeafe;
      font-size: 2rem;
      font-weight: 900;
      margin: 0;
      letter-spacing: 1.5px;
      text-transform: uppercase;
      font-family: 'Poppins', 'Segoe UI', Arial, sans-serif;
      text-shadow: 0 2px 16px #0008;
    }

    .nr-modal-body {
      padding: 2rem;
    }

    .nr-modal-sections {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 2rem;
      margin-bottom: 3rem;
    }

    .nr-modal-section {
      background: rgba(24, 34, 58, 0.5);
      padding: 1.5rem;
      border-radius: 1rem;
      border: 1px solid #22304a;
    }

    .section-title {
      display: flex;
      align-items: center;
      gap: 0.8rem;
      color: #5A82B2;
      font-size: 1.3rem;
      margin: 0 0 1.2rem 0;
      font-weight: 700;
    }

    .section-content {
      color: #e3f2fd;
      font-size: 1.05rem;
      line-height: 1.6;
      white-space: pre-line;
    }

    .nr-modal-carousel {
      margin: 3rem 0;
    }

    .carousel-title {
      color: #5A82B2;
      font-size: 1.5rem;
      margin: 0 0 1.5rem 0;
      font-weight: 700;
      text-align: center;
    }

    .carousel-container {
      position: relative;
      width: 100%;
      height: 400px;
      margin: 2rem 0;
      overflow: hidden;
      border-radius: 1rem;
      background: #151a21;
    }

    .carousel-track {
      position: relative;
      height: 100%;
      display: flex;
      transition: transform 0.5s ease;
    }

    .carousel-item {
      position: absolute;
      width: 100%;
      height: 100%;
      flex-shrink: 0;
      opacity: 0;
      transform: translateX(100%) scale(0.95);
      transition: 
        opacity 0.5s ease,
        transform 0.5s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .carousel-item img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      border-radius: 0.5rem;
      box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
    }

    .carousel-item.prev {
      opacity: 0;
      transform: translateX(-100%) scale(0.95);
    }

    .carousel-item.active {
      opacity: 1;
      transform: translateX(0) scale(1);
      z-index: 2;
    }

    .carousel-item.next {
      opacity: 0;
      transform: translateX(100%) scale(0.95);
    }

    .carousel-nav {
      position: absolute;
      top: 50%;
      transform: translateY(-50%);
      background: rgba(90, 130, 178, 0.2);
      border: none;
      color: #fff;
      width: 3rem;
      height: 3rem;
      border-radius: 50%;
      cursor: pointer;
      display: flex;
      align-items: center;
      justify-content: center;
      transition: all 0.3s ease;
      z-index: 3;
    }

    .carousel-nav.prev { left: 1rem; }
    .carousel-nav.next { right: 1rem; }

    .carousel-nav:hover {
      background: #5A82B2;
      transform: translateY(-50%) scale(1.1);
    }

    .carousel-nav svg {
      width: 24px;
      height: 24px;
    }

    .nr-modal-footer {
      text-align: center;
      margin-top: 2rem;
      padding-top: 2rem;
      border-top: 1px solid #22304a;
    }

    .nr-modal-link {
      display: inline-flex;
      align-items: center;
      gap: 0.8rem;
      background: rgba(35, 41, 58, 0.9);
      color: #5A82B2;
      padding: 0.8em 1.6em;
      border-radius: 2em;
      font-size: 1rem;
      font-weight: 600;
      text-decoration: none;
      border: 1.5px solid rgba(90, 130, 178, 0.3);
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .nr-modal-link:hover {
      background: linear-gradient(135deg, #4A72A2 0%, #5A82B2 100%);
      color: #ffffff;
      border-color: #6992c2;
      transform: translateY(-2px);
      box-shadow: 0 4px 15px rgba(90, 130, 178, 0.4);
    }

    @keyframes fadeInVoletModern {
      from {
        opacity: 0;
        transform: translateY(40px) scale(0.97);
      }
      60% {
        opacity: 0.7;
        transform: translateY(-8px) scale(1.03);
      }
      to {
        opacity: 1;
        transform: translateY(0) scale(1);
      }
    }

    @keyframes modalFadeIn {
      from {
        opacity: 0;
        transform: scale(0.95);
      }
      to {
        opacity: 1;
        transform: scale(1);
      }
    }

    @media (max-width: 768px) {
      .nr-container {
        padding: 2rem 1rem;
      }
      .nr-intro {
        padding: 2rem 1.5rem;
        margin-bottom: 3rem;
      }
      .nr-card {
        width: 100%;
      }
      .nr-modal-content {
        width: 95%;
        max-height: 95vh;
      }
      .nr-modal-sections {
        grid-template-columns: 1fr;
      }
      .carousel-container {
        height: 300px;
      }
    }
  </style>

  <script>
    interface Image {
      src: string;
      alt?: string;
    }

    interface Projet {
      titre: string;
      ecoconception: string;
      accessibilite: string;
      lien: string;
      images?: Image[];
    }

    document.addEventListener('DOMContentLoaded', () => {
      const modal = document.querySelector<HTMLElement>('.nr-modal');
      if (!modal) return;

      const modalClose = modal.querySelector<HTMLButtonElement>('.nr-modal-close');
      const modalTitle = modal.querySelector<HTMLHeadingElement>('.nr-modal-title');
      const ecoContent = modal.querySelector<HTMLDivElement>('.eco-content');
      const accessContent = modal.querySelector<HTMLDivElement>('.access-content');
      const modalLink = modal.querySelector<HTMLAnchorElement>('.nr-modal-link');
      const carouselTrack = modal.querySelector<HTMLDivElement>('.carousel-track');
      const prevButton = modal.querySelector<HTMLButtonElement>('.carousel-nav.prev');
      const nextButton = modal.querySelector<HTMLButtonElement>('.carousel-nav.next');

      if (!modalClose || !modalTitle || !ecoContent || !accessContent || !modalLink || !carouselTrack || !prevButton || !nextButton) return;

      let currentSlide = 0;
      let images: Image[] = [];

      function updateSlideClasses() {
        const items = carouselTrack.querySelectorAll<HTMLElement>('.carousel-item');
        items.forEach((item, i) => {
          item.classList.remove('active', 'prev', 'next');
          if (i === currentSlide) {
            item.classList.add('active');
          } else if (i === (currentSlide - 1 + items.length) % items.length) {
            item.classList.add('prev');
          } else if (i === (currentSlide + 1) % items.length) {
            item.classList.add('next');
          }
        });
      }

      function nextSlide() {
        if (images.length <= 1) return;
        currentSlide = (currentSlide + 1) % images.length;
        updateSlideClasses();
      }

      function prevSlide() {
        if (images.length <= 1) return;
        currentSlide = (currentSlide - 1 + images.length) % images.length;
        updateSlideClasses();
      }

      // Navigation du carousel
      prevButton.addEventListener('click', prevSlide);
      nextButton.addEventListener('click', nextSlide);

      // Fermer la modal
      modalClose.addEventListener('click', () => {
        modal.classList.remove('active');
        document.body.style.overflow = '';
      });

      // Fermer avec Escape
      document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape' && modal.classList.contains('active')) {
          modal.classList.remove('active');
          document.body.style.overflow = '';
        }
      });

      // Click en dehors pour fermer
      modal.addEventListener('click', (e) => {
        if (e.target === modal) {
          modal.classList.remove('active');
          document.body.style.overflow = '';
        }
      });

      // Touch swipe support pour le carousel
      let touchStartX = 0;
      let touchEndX = 0;

      carouselTrack.addEventListener('touchstart', (e) => {
        touchStartX = e.changedTouches[0].screenX;
      }, false);

      carouselTrack.addEventListener('touchend', (e) => {
        touchEndX = e.changedTouches[0].screenX;
        handleSwipe();
      }, false);

      function handleSwipe() {
        const swipeThreshold = 50;
        const diff = touchEndX - touchStartX;
        
        if (Math.abs(diff) < swipeThreshold) return;
        
        if (diff > 0) {
          prevSlide();
        } else {
          nextSlide();
        }
      }

      // Handler pour les cards
      document.querySelectorAll<HTMLAnchorElement>('.nr-card').forEach(card => {
        card.addEventListener('click', (e) => {
          e.preventDefault();
          const projet = JSON.parse(card.dataset.projet || '{}') as Projet;
          
          // Mise à jour du contenu
          modalTitle.textContent = projet.titre;
          ecoContent.textContent = projet.ecoconception;
          accessContent.textContent = projet.accessibilite;
          modalLink.href = projet.lien;

          // Mise à jour du carousel
          images = projet.images || [];
          carouselTrack.innerHTML = images.map((img, index) => `
            <div class="carousel-item${index === 0 ? ' active' : index === 1 ? ' next' : index === images.length - 1 ? ' prev' : ''}">
              <img src="${img.src}" alt="${img.alt || ''}" loading="lazy">
            </div>
          `).join('');

          currentSlide = 0;
          
          // Afficher/cacher les boutons de navigation selon le nombre d'images
          if (images.length <= 1) {
            prevButton.style.display = 'none';
            nextButton.style.display = 'none';
          } else {
            prevButton.style.display = '';
            nextButton.style.display = '';
          }

          // Afficher la modal
          modal.classList.add('active');
          document.body.style.overflow = 'hidden';
        });
      });
    });
  </script>
</Layout>
