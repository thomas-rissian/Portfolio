---
import Layout from '../../layouts/Layout.astro';

export async function getStaticPaths() {
  const projets = await Astro.glob('../../content/numerique-responsable/*.md');
  return projets.map((projet) => ({
    params: { slug: projet.frontmatter.slug }
  }));
}

const { slug } = Astro.params;
const projets = await Astro.glob('../../content/numerique-responsable/*.md');
const projet = projets.find(p => p.frontmatter.slug === slug);

if (!projet) {
  throw new Error('Projet numérique responsable introuvable');
}

const {
  titre,
  lien,
  ecoconception,
  accessibilite,
} = projet.frontmatter;
---

<Layout>
  <div class="nr-back-button">
    <a href="/numerique-responsable" class="back-button">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M19 12H5M12 19l-7-7 7-7"/>
      </svg>
      <span>Retour</span>
    </a>
  </div>

  <article class="nr-detail">
    <div class="nr-header">
      <h1 class="nr-title">{titre}</h1>
      {lien && (
        <a href={lien} target="_blank" rel="noopener" class="project-link">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/>
            <path d="M15 3h6v6"/>
            <path d="M10 14L21 3"/>
          </svg>
          Voir le projet
        </a>
      )}
    </div>

    <div class="nr-sections">
      <section class="nr-section">
        <div class="section-header">
          <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M12 3v18M3 12h18M12 8a4 4 0 0 1 4 4M12 16a4 4 0 0 0 4-4"/>
          </svg>
          <h2>Démarche d'Écoconception</h2>
        </div>
        <div class="section-content">
          <p>{ecoconception}</p>
        </div>
      </section>

      <section class="nr-section">
        <div class="section-header">
          <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M12 15a3 3 0 1 0 0-6 3 3 0 0 0 0 6z"/>
            <path d="M18.7 14.3l-1.4-1.4a5 5 0 0 0 0-7l1.4-1.4a7 7 0 0 1 0 9.8z"/>
            <path d="M5.3 14.3a7 7 0 0 1 0-9.8l1.4 1.4a5 5 0 0 0 0 7l-1.4 1.4z"/>
          </svg>
          <h2>Accessibilité & Inclusivité</h2>
        </div>
        <div class="section-content">
          <p>{accessibilite}</p>
        </div>
      </section>
    </div>
  </article>

  <style>
    .nr-back-button {
      position: fixed;
      top: 2rem;
      left: 2rem;
      z-index: 100;
    }

    .back-button {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      background: rgba(21, 26, 33, 0.9);
      color: #b3c6e0;
      padding: 0.8rem 1.2rem;
      border-radius: 2rem;
      text-decoration: none;
      backdrop-filter: blur(8px);
      transition: all 0.3s ease;
    }

    .back-button:hover {
      background: #5A82B2;
      color: white;
      transform: translateX(-5px);
    }

    .nr-detail {
      max-width: 900px;
      margin: 4rem auto;
      padding: 2rem;
    }

    .nr-header {
      margin-bottom: 3rem;
      text-align: center;
    }

    .nr-title {
      font-size: 2.5rem;
      color: #dbeafe;
      margin-bottom: 1.5rem;
      font-weight: 900;
      letter-spacing: 0.05em;
    }

    .project-link {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      background: #23293a;
      color: #b3c6e0;
      padding: 0.8rem 1.5rem;
      border-radius: 2rem;
      text-decoration: none;
      font-weight: 500;
      border: 1.5px solid #22304a;
      transition: all 0.3s ease;
    }

    .project-link:hover {
      background: #5A82B2;
      color: white;
      border-color: #5A82B2;
      transform: translateY(-2px);
      box-shadow: 0 4px 16px #5A82B255;
    }

    .nr-sections {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 2rem;
    }

    .nr-section {
      background: linear-gradient(120deg, #151a21 60%, #1a2233 100%);
      border-radius: 1.5rem;
      border: 2.5px solid #22304a;
      padding: 2rem;
      transition: all 0.3s ease;
    }

    .nr-section:hover {
      border-color: #5A82B2;
      transform: translateY(-5px);
      box-shadow: 0 8px 30px rgba(90, 130, 178, 0.2);
    }

    .section-header {
      display: flex;
      align-items: center;
      gap: 1rem;
      margin-bottom: 1.5rem;
      color: #5A82B2;
    }

    .section-header h2 {
      font-size: 1.3rem;
      margin: 0;
      font-weight: 700;
    }

    .section-content {
      color: #e3f2fd;
      line-height: 1.6;
      font-size: 1.05rem;
    }

    @media (max-width: 768px) {
      .nr-back-button {
        position: static;
        padding: 1rem;
      }
      .nr-detail {
        margin: 0 auto;
        padding: 1rem;
      }
      .nr-title {
        font-size: 2rem;
      }
    }
  </style>
</Layout>
